@import './variables'
@import './mixins'

.container
    a
        font 400 1rem body-font-family
        text-decoration none
    .content a
        color a-color
        border-bottom 1px solid a-color
    &.bg-color-desatured-blue
    &.bg-color-dark-blue
        color white
        a
            color white
    &.bg-color-desatured-blue
        @media screen and (max-width: 768px)
            text-align center
            .col
                margin 1rem 0
        p
            margin-bottom 0
        input[type=text]
            input-text(80%, 200px)
            display block
        input[type=submit]
            input-submit(30%, 200px)
    &.bg-color-dark-blue
        li
            font 400 1rem body-font-family
            margin 1rem 0
        .social
            li
                float left
                width 22px
                text-align center
                padding 0.5rem
                margin-right 1rem
                border 1px solid white
                border-radius 2rem
            @media screen and (max-width: 768px)
                margin 0 auto